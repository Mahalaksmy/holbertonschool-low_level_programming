#Variables

CC =  gcc
SRC = main.c school.c
OBJ = $(SRC:%.c=%.o)
NAME = school
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic

# Rules
all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

.PHOBY: clean
clean:
	$(RM) -f *~ $(NAME)

.PHOBY: oclean
oclean:
	$(RM) -f *.o $(NAME)

fclean: clean oclean
re: oclean all
